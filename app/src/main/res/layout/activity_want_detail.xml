<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.main.wantpdca.WantDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="want Detail screen"
        android:id="@+id/wantDeatilScreen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wantDeatilScreen"
        android:id="@+id/wantGrid"
        android:columnCount="2"
        android:rowCount="6"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WantMotivateBtn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/want"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            />

        <ImageButton
            android:layout_width="100px"
            android:layout_height="100px"
            android:scaleType="centerInside"
            android:id="@+id/PBtn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plan title"
            android:id="@+id/planTitle"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="100px"
            android:layout_height="100px"
            android:scaleType="centerInside"
            android:id="@+id/DBtn"
            android:src="@drawable/d"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="do title"
            android:id="@+id/doTitle"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="100px"
            android:layout_height="100px"
            android:scaleType="centerInside"
            android:id="@+id/CBtn"
            android:src="@drawable/c"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check title"
            android:id="@+id/checkTitle"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <ImageButton
            android:layout_width="100px"
            android:layout_height="100px"
            android:scaleType="centerInside"
            android:id="@+id/ABtn"
            android:src="@drawable/a"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="act title"
            android:id="@+id/actTitle"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wantリスト画面へ"
            android:id="@+id/wantListBtn"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="2"
            />
    </GridLayout>

</RelativeLayout>
